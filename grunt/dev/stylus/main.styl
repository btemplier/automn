/* SLIDER */
.slick-slider
  position relative
  display block
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  -ms-touch-action none
  -webkit-tap-highlight-color transparent 

.slick-list
  position relative
  overflow hidden
  display block
  margin 0
  padding 0
  &:focus
    outline none
  .dragging
    cursor pointer
    cursor hand 
.slick-loading .slick-list
  background white url("./ajax-loader.gif") center center no-repeat

.slick-slider .slick-list, .slick-track, .slick-slide, .slick-slide img
  -webkit-transform translate3d(0, 0, 0)
  -moz-transform translate3d(0, 0, 0)
  -ms-transform translate3d(0, 0, 0)
  -o-transform translate3d(0, 0, 0)
  transform translate3d(0, 0, 0) 

.slick-track
  position relative
  left 0
  top 0
  display block
  zoom 1
  &:before, &:after
    content ""
    display table
  &:after
    clear both

.slick-loading .slick-track
  visibility hidden 

.slick-slide
  float left
  height 100%
  min-height 1px
  display none
  &:nth-child(1)
    [class^='lk']
      position absolute
      cursor pointer
      margin 160px
      &:hover
        background-blend-mode:multiply
    .lk1
      top 0px
      right 860px
      background-color #d4c2a8
    .lk2
      top 0px
      right 220px
      background-color rgba(188,120,71,0.48)
   .lk3
      bottom 80px
      right 720px
      background-color rgba(63,63,141,0.33) 
    .lk4
      bottom 220px
      right 300px
      background-color rgba(63,63,141,0.40) 
    .lk5
      bottom 80px
      right 0px
      background-color rgba(63,134,141,0.50) 
  .audioplayer
    position absolute
    top 415px
    left 503px
    img
      margin 0px
      display inline-block 
      vertical-align middle
      margin-right 12px
      cursor pointer
      &.mute
        margin-left 11px
  

.slick-slide.slick-loading img
  display none 
.slick-slide.dragging img
  pointer-events none 
.slick-initialized .slick-slide
  display block 
.slick-loading .slick-slide
  visibility hidden 
.slick-vertical .slick-slide
  display block
  height auto
  border 1px solid transparent

/* Icons */
@font-face
  font-family "slick"
  src url("./fonts/slick.eot")
  src url("./fonts/slick.eot?#iefix") format("embedded-opentype"), 
       url("./fonts/slick.woff") format("woff"), 
       url("./fonts/slick.ttf") format("truetype"), 
       url("./fonts/slick.svg#slick") format("svg")
  font-weight normal
  font-style normal 
/* Arrows */
.slick-prev, .slick-next
  position absolute
  display block
  height 100%
  line-height 0
  font-size 0
  cursor pointer
  opacity .3
  color transparent
  min-height: 1080px;
  top 0px
  width 65px
  padding 0
  border none
  outline none 
.slick-prev:hover, .slick-prev:focus, .slick-next:hover, .slick-next:focus
  outline none
  color transparent
  opacity .4
.slick-prev:hover:before, .slick-prev:focus:before, .slick-next:hover:before, .slick-next:focus:before
  opacity 1 
.slick-prev.slick-disabled:before, .slick-next.slick-disabled:before
  opacity 0.25 

.slick-prev:before, .slick-next:before
  background #003882
  min-height: 1080px;
  height 100%
  width 56px
  left 11px
  position relative
  opacity .66
  display block
  -webkit-font-smoothing antialiased
  moz-osx-font-smoothing grayscale

.slick-prev
  left 0px
  background url(../images/bg_prev.png) no-repeat center center
.slick-prev:before
  content "\2190"
  background url(../images/arrow_prev.png) no-repeat center center
  left -2px
  position relative

.slick-next  
  right 0px
  background url(../images/bg_next.png) no-repeat center center
.slick-next:before
  content "\2192" 
  background url(../images/arrow_next.png) no-repeat center center

/* Dots */
.slick-slider
  margin-bottom 0px