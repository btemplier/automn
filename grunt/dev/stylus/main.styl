/*----------*/

.slick-dots
  text-align center
  position relative
  top -150px
  width 1500px
  margin 0 auto
  li
    margin-top 20px
    border-color #7b8099
    border-style solid
    border-width 3px 0 0 0
    padding-right 5px
    position: relative
    box-sizing border-box
    /*border-bottom 3px solid #7b8099*/
    display inline-block
    &.first
      border-color #43b04e
      width 3.333%
    &.second
      border-color #ed980d
      width 5%
    &.third
      border-color #e2344e
      width 3.333%
    &.fourth
      border-color #b4007d
      width 6.666%
    &.fifth
      border-color #20768e 
      width 9%
    &.slick-active, &.slick-active ~ li
      border-style dotted
      border-color #808080
    &.slick-active ~li span
      border-color #d3dade!important
      background #FFF
    &.slick-active ~li.break
      span
        border-color #7b8099!important
      button
        border-color #d3dade!important
    .slick-dots li.slick-active span, .slick-dots li.slick-active ~ li span
      border-color grey
    &:last-child
      border 0
      width 25px
    // Couleur 1ere etape 
    &.first span
      border-color: #afd88a;
      background: #e1efcc;
    // Couleur 2eme etape
    &.second span
      border-color: #ed980d;
      background #f9e0b6
    // Couleur 3eme etape
    &.third span
      border-color: #e2344e ;
      background #f6c1c9
    // Couleur 4eme etape
    &.fourth span
      border-color: #b4007d
      background #cfbcd8
    // Couleur 5eme etape
    &.fifth span
      border-color: #20768e
      background #9edddb

    &.break
      &.first 
        span
          border-color #50ac53
        button
          border-color #afd88a
      &.second 
        span
          border-color #ed980d
        button
          border-color #f9e0b6
      &.third 
        span
          border-color #e2344e
        button
          border-color #f6c1c9
      &.fourth 
        span
          border-color #b4007d
        button
          border-color #f6c1c9    
      &.fifth 
        span
          border-color #20768e
        button
          border-color #9edddb
      span
        background #FFF!important

    &.profilhome
      position absolute
      display block
      width 50px
      height 52px
      content ''
      background url('../images/bt_debut_profil.png')
      cursor pointer
      left -110px
      bottom 0px
      border 0
      opacity .7
      text-indent -999em
      &:hover,
      &:focus
        opacity 1
      &.slick-active
        opacity 1
      span
