    button
      border-width 5px
      border-style solid
      border-color transparent
      border-radius 20px
      width 26px
      height 26px
      display block
      position relative
      text-indent -9999em
      background transparent
      cursor pointer
      top -14px
      left -10px
      &:focus
        outline: transparent
    ~ li
      border-color grey
    span
      background #FFF
      position absolute
      border-width 4px
      border-style solid
      border-color #d4dbdf
      border-radius 7px
      float left
      text-indent -9999em
      width 16px
      height 16px
      box-sizing border-box
      transition all .5s
      left -5px
      top -9px
      z-index 0
      cursor pointer
      &:hover,
      &:focus
        box-shadow 0px 0px 30px #111
        transition all .2s

    label
      position absolute
      width 200%
      left -100%
      padding-left 3px
      font-family nimbus-reg
  
