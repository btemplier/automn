          width 520px
      .cordinate
        box-shadow(0px 0px 20px 0px #CCC)
        width 980px
        margin 0 auto
        background-color #e5e5e5
        min-height 400px
        padding-top 20px
        font-family 'blairmditc_ttregular', sans-serif
        font-size 12px
        .mailto
          float left
          width 250px
          margin-top 15px
          img
            float left
          a
            background url(../images/bullet-mail.png)
            width 33px
            height 33px
            display block
            transition all 0s
            float left
            margin-top 25px
            margin-left 5px
            &:hover
              opacity(1)
              background-position 0 -33px
              transition all 0s
        p
          line-height 20px
          padding-left 10px
  #map
    box-shadow(0px 0px 20px 0px #CCC)
    width 980px
    height 400px
    margin 0 auto
    background #EEE
