    display none
  .wrapper
    width 100%
    background #EE
    .container
      .content
        box-shadow(0px 0px 20px 0px #CCC)
        background-color #e5e5e5
        padding-top 50px
        padding-right 320px
        padding-left 20px
        width 980px
        min-height 825px
        margin 0 auto
        ul
          li
            background url('../images/little-bullet.jpg') no-repeat
            letter-spacing 1px
            color #1d173a
            font-size 8px
            font-family 'blairmditc_ttregular', sans-serif
            text-align justify
            margin-bottom 10px
            padding-left 30px
            line-height 25px
            width 520px
        h2
          font-family 'StoneSerifLT', sans-serif
          display block
          color #000
          font-size 21px
          text-transform uppercase
          color #1d173a
          width 520px
          margin-bottom 20px
        p
          font-family 'blairmditc_ttregular', sans-serif
          font-size 8px
          letter-spacing 1px
          color #0a1538      
          line-height 25px
          text-align justify
          color #0a1538
          width 520px
          margin-bottom 20px
