@import "mixins.styl"
@import "fonts.styl"
@import "reset.styl"
global-reset()
html
  font-size 20px
  font-weight 100
  body
    color #CCC
a
  text-decoration none
  color white
h1, h2, h3, h4, header
  color #FFF
  font-family 'libre_baskervilleregular'
  margin 0
  padding 0

*
  box-sizing border-box

/* NAV */
body
  background url('../images/bg.png') repeat
  box-shadow inset 0px 0px 50px 0px #242247
  height 100%
  width 100%
  position absolute
  &.concours
    background none
h1
  background url('../images/logo-kyriad.png') no-repeat
  text-indent -9999em
  width 213px
  height 97px
  margin 10px auto 10px auto
h2
  background url('../images/h2.png') no-repeat
  background-size 272px
  text-indent -9999em
  width 272px
  height 54px
  margin 0 auto 5px auto
h3
  background url('../images/h3.png') no-repeat
  background-size 245px
  text-indent -9999em
  width 245px
  height 17px
  margin 0 auto 10px auto
hr
  border-color #aaa9b7
  height 1px
  width 70%
  margin 0 auto 10px auto
  border-width 1px 0 0 0
  border-style solid
h4
  background url('../images/h4.png') no-repeat
  background-size 239px
  text-indent -9999em
  width 239px
  height 48px
  margin 0 auto 0 auto
.button
  background #2a2f89
  border-radius 10px
  border 1px solid #676cc4
  color #fcd98e
  padding 8px 20px
  text-transform uppercase
  margin 150px auto 0 auto
  display block
  width 145px
  height 40px
  background url('../images/bg-btn.png') no-repeat center center
  background-size cover
  text-align center
ul
  margin 0 10px
  clearfix()
  li
    clearfix()
    float left
    box-sizing border-box
    margin-right 5%
    .tablette
      background url('../images/txt-tablette.png')
      background-size  97px
      width 97px
      height 49px
      text-indent -9999em
      margin-top 5px
    .nuits
      background url('../images/txt-nuits.png')  
      background-size  68px
      width 68px
      height 29px
      text-indent -9999em
      margin 5px 0 0 5px
    div, span, img
      float left
    .btn
      background #d0c8b8
      border-radius 20px
      color #2d2d2d
      padding 10px
    &:last-child
      margin-top 10px
nav
  position fixed
  top 0px
  left 0px
  width 0px
  height 0px
  border-style solid
  border-width 40px 75px 0 0
  border-color #e3c177 transparent transparent transparent
  z-index 10
  img 
    position fixed
    width 24px
    top 7px
    left 5px
.menu
  display none
  background #e3c177
  position fixed
  top 0px
  margin 0
  z-index 9
  li
    list-style-type none
    text-align center
    text-transform uppercase
    padding 10px
    border-bottom 1px solid #FFF
    width 100%
    ul li
      color #59597f
      border-bottom 0
      width 12%
      display inline
      margin 0
    &:last-child
      margin-top 0px

.concours
  header
    padding 35px 0 0 30px
    background url('../images/bg-concours.jpg') no-repeat
    background-size 320px
    width 320px
    height 257px
    h1
      position relative
      top -7px
      left 30px
      margin 0
      background url('../images/h1-concours.png') no-repeat
      background-size 174px
      width 174px
      height 40px
  .play
    background url('../images/bg-play.png') repeat-x
    height 105px
    background-size 20px 105px
    padding-top: 7px;
    border-bottom 1px solid #FFF
    h2
      background url('../images/h2-jouer.png') no-repeat
      height: 61px;
      width: 299px;
    span.triangle
      width 0px
      height 0px
      border-style solid
      border-width 12px 40px 0 40px
      border-color #ffffff transparent transparent transparent
      margin 0 auto
      display block
  ul.rooms
    margin 0
    li
      display inline
      background #38364f
      width 25%
      margin 0
      border-right 1px solid #59597f
      border-bottom 1px solid #59597f
      padding 13px 25px
      a
        color #e3c177
        border-radius 15px
        border 1px solid #e3c177
        display block
        width 32px
        height 32px
        line-height: 30px;
        text-align center
@media (-webkit-min-device-pixel-ratio: 2)
  body
    background url('../images/hd/bg.jpg') repeat
    background-size 320px
  h1
    background url('../images/hd/logo-kyriad.png') no-repeat
    background-size 107px
    width 107px
    height 49px
  .concours
    header
      background url('../images/hd/bg-concours.jpg') no-repeat
      background-size 100%
      width 100%
      height 257px
      h1
        background url('../images/hd/h1-concours.png') no-repeat
        background-size 174px
        width 174px
        height 40px
    .play
      background url('../images/hd/bg-play.png') repeat-x
      height 105px
      background-size 20px 105px
      h2
        background url('../images/hd/h2-jouer.png') no-repeat
        background-size 299px
        width 299px
        height 61px
      
    
